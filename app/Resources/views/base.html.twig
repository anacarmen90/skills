<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/skills/css/style.css') }}" />
        {% block stylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="https://fonts.googleapis.com/css?family=Lato|Open+Sans|Roboto" rel="stylesheet" />
        <link rel="stylesheet" type="text/css" href="{{ asset('/library/bootstrap/dist/css/bootstrap.min.css') }}" />
    </head>
    <body>
        {% block body %}
            <section class="head">
                <nav class="navbar navbar-default">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/"><div class="logo"><img src="/bundles/skills/images/skills-logo.png" /></div></a>
                        </div>
                        {% if app.user %}
                            <ul class="nav navbar-nav navbar-right">
                                {% set menuLink = "Profile" %}
                                <li><a href="/analytics">Analytics</a></li>
                                <li><a href="/knowledge">{{ menuLink }}</a></li>
                            </ul>
                        {% endif %}
                    </div>
                </nav>
            </section>
        {% endblock %}
        <footer>
            <p class="text-center light-grey-text">Created by the most wonderful team ever!</p>
        </footer>
        <script type="application/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
        <script type="application/javascript" src="{{ asset('/library/vue/dist/vue.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/vue-resource@1.3.4"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
